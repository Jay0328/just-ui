{
  "name": "just-ui",
  "version": "0.0.0",
  "description": "Just React UI",
  "main": "index.js",
  "repository": "git@github.com:Jay0328/just-ui.git",
  "author": "Jay Chen <gcobs135102@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna run clean && lerna clean",
    "build:clean": "lerna run build:clean --stream --parallel",
    "build": "lerna run build --stream --sort",
    "format": "prettier './**/*.{js,ts,tsx,json,scss,md}' --write",
    "lint:css": "stylelint ./**/*.scss --config .stylelintrc",
    "lint:ts": "eslint . --config .eslintrc --ext .js,.ts,.tsx",
    "lint": "npm run lint:ts && npm run lint:css",
    "test:clean": "lerna run test:clean --stream --parallel",
    "test": "lerna run test --stream",
    "storybook:start": "start-storybook -p 6006 -c ./packages/react/.storybook",
    "storybook:build": "build-storybook",
    "storybook:deploy": "storybook-to-ghpages --out ./public",
    "commit": "git-cz",
    "release": "npm run build:clean && lerna version && npm run build && lerna publish from-git"
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@storybook/addon-info": "^5.3.9",
    "@storybook/cli": "^5.3.9",
    "@storybook/react": "^5.3.9",
    "@storybook/storybook-deployer": "^2.8.1",
    "@types/node": "^13.5.0",
    "@types/jest": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "autoprefixer": "^9.7.4",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "dart-sass": "^1.25.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.2",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-docgen-typescript-loader": "^3.6.0",
    "react-dom": "^16.12.0",
    "rollup": "^1.29.1",
    "rollup-plugin-postcss": "^2.0.4",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "stylelint": "^13.0.0",
    "stylelint-config-recommended-scss": "^4.1.0",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.13.0",
    "ts-jest": "^25.0.0",
    "typescript": "^3.7.5",
    "webpack": "^4.41.5"
  }
}
